@model HomeVM

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Home Page</title>

</head>
<body>
    @*Carousel*@
    <div id="carouselExampleAutoplaying" class="carousel slide mx-auto col-12" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Imagenes/Carousel/carousel_1.jpg" class="d-block w-100 object-fit-cover" style="height:500px;" alt="...">
                <div class="carousel-caption text-left">
                    <p><a class="btn btn-lg btn-primary" href="#" role="button">SHOP NOW</a></p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Imagenes/Carousel/carousel_2.jpg" class="d-block w-100 object-fit-cover" style="height:500px;" alt="...">
                <div class="carousel-caption text-left">
                    <h1>Macbook m2</h1>
                    <p>With M2 Pro and M2 Max, MacBook Pro is capable of transforming pro workflows across a wide range of disciplines, from art to science to app development. Users looking to upgrade from Intel-based Mac models will experience even more dramatic improvements in performance, battery life, connectivity, and overall productivity. MacBook Pro also maintains performance whether users are plugged in or on battery.</p>
                    <p><a class="btn btn-lg btn-primary" href="#" role="button">SHOP NOW</a></p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    @*Bienvenida y descripcion*@
    <div class="text-center my-5">
        <h1>Bienvenido a nuestra Tienda</h1>
        <p class="fs-5">Esta es una aplicacion e-commerce en donde podras encontrar todo tipo de articulos y tendras la opcion de comprar y crearte una cuenta y mucho mas</p>
    </div>

    @*Categorias en display*@
    <div class="container mb-5 pb-5">
        <div class="d-flex">

            @foreach (var c in Model.Categorias!)
            {
                <div class="me-3 border-0" style="width: 20rem;">

                    <a class="text-decoration-none text-reset h-100" href="/search?categoria=@c.Nombre">
                        <img class="card-img-top h-100 object-fit-cover" src="~/Imagenes/Categorias/@c.ImagenNombre" alt="categoria">
                    </a>
                    <div class="card-body">
                        <h3 class="card-title text-center">@c.Nombre</h3>
                    </div>
                </div>
            }
        </div>
    </div>

    @*Productos Featured*@

    <div class="mb-5">
        <div class="container">
            <h1 class="text-center mb-5">Destacados</h1>
            <div class="d-flex">

                @foreach (var p in Model.Productos!)
                {

                    <div id="@p.Id" class="card product-card me-3" style="width: 400px;">
                        <a onclick="AgregarAFavoritos(this)" class="product-like-icon" data-tip="Agregar a Favoritos">
                            @if (Model.Favoritos.Contains(p))
                            {
                                <i class="bi bi-heart-fill text-danger position-absolute end-0 p-2 fs-4 text-secondary"></i>
                            }
                            else
                            {
                                <i class="bi bi-heart position-absolute end-0 p-2 fs-4 text-secondary"></i>
                            }
                        </a>
                        <a href="/@p.NombreClave" class="text-decoration-none text-reset">
                            <img class="card-img-top object-fit-contain w-100" style="height:400px;" src="~/Imagenes/Productos/@p.Imagenes!.ElementAt(0).ImagenNombre" alt="Producto">
                        </a>
                        <div class="card-body">
                            <ul class="d-block row text-center p-0">
                                <li class="d-inline text-warning p-0 me-1"><i class="bi bi-star-fill"></i></li>
                                <li class="d-inline text-warning p-0 me-1"><i class="bi bi-star-fill"></i></li>
                                <li class="d-inline text-warning p-0 me-1"><i class="bi bi-star-fill"></i></li>
                                <li class="d-inline text-warning p-0 me-1"><i class="bi bi-star-half"></i></li>
                                <li class="d-inline text-warning p-0 me-1"><i class="bi bi-star"></i></li>
                            </ul>
                            <a href="/@p.NombreClave" class="text-decoration-none text-reset">
                                <h4 class="card-title text-center">@p.Nombre</h4>
                                <p class="card-text text-center">
                                    <strike class="card-text">$@(p.Skus!.First().Precio + 100)</strike><b class="card-text text-center"> $@p.Skus!.First().Precio</b>
                                </p>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <script>function AgregarAFavoritos(e) {

            var element = e.firstElementChild.classList;

            var productoId = e.parentElement.getAttribute('id');

            console.log(productoId);

            var data = { "productoId": productoId }

            $.ajax({
                type: 'POST',
                url: '/Producto/AgregarAFavoritos',
                dataType: 'json',
                data: { productoId: productoId },
                success: function (response) {
                    alert(response.msj);

                    if (response.msj === "agregado") {

                        element.replace('bi-heart', 'bi-heart-fill');
                        element.add('text-secondary', 'text-danger')

                    } else {

                        element.replace('bi-heart-fill', 'bi-heart')
                        element.replace('text-danger', 'text-secondary')
                    }
                },
                error: function () {
                    window.location.href = '/Login';
                }
            })

        }</script>
</body>
</html>