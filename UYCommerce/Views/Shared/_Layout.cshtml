<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UYCommerce</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UYCommerce.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>

</head>
<body style="min-height:100%;">
    <header class="">

        <nav class="navbar navbar-expand-lg navbar-light bg-primary bg-gradient pt-0 pb-2 shadow-sm border-bottom border-dark-subtle text-light">


            <div class="mx-auto col-9 d-flex flex-column">

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse d-flex mx-auto col-10" id="navbarSupportedContent">

                    <a class="navbar-brand text-nowrap me-4" href="/">
                        @*<img height="80" src="~/Imagenes/Logos/navlogo.png" />*@
                        <h1 class="text-light" style="font-family:Impact;">UyCommerce</h1>
                    </a>

                    @*Este es el Search input*@

                    <div class="d-flex col-5 ms-4 me-5">
                        <form class="w-100" role="search" asp-controller="Producto" asp-action="BuscarProductosPorQuery" method="get">
                            <div class="input-group shadow">
                                <input name="query" id="search" class="form-control d-flex py-2" type="search" placeholder="Buscar productos" aria-label="Search">
                                <button class="btn btn-light d-flex border" type="submit"><i class="bi bi-search text-dark fs-5"></i></button>
                            </div>
                        </form>
                    </div>

                    <div class="d-flex ms-auto me-5">

                        @if (User.Identity != null && !User.Identity.IsAuthenticated)
                        {
                            <a class="my-auto text-nowrap text-light me-4 text-decoration-none" href="/Register">Crea una cuenta</a>

                            <a class="my-auto text-nowrap text-light me-4 text-decoration-none" asp-controller="Auth" asp-action="Login">Iniciar Sesion</a>
                        }
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            @* Cuenta *@
                            <ul class="navbar-nav d-flex">
                                <li class="nav-item dropdown">
                                    <a class="nav-link text-light" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-person-circle text-white fs-4 m-2"></i>Mi Cuenta
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="text-decoration-none" href="/Compras">Mis Compras</a></li>
                                        <li><a class="text-decoration-none" href="/Favoritos">Favoritos</a></li>
                                        <li>Preguntas</li>
                                        <li>Perfil</li>
                                        <li><a class="my-auto text-nowrap ms-auto" asp-controller="Auth" asp-action="Logout">Cerrar Sesion</a></li>
                                    </ul>
                                </li>
                            </ul>
                            @* Notificaciones *@
                            <ul class="navbar-nav d-flex">
                                <li class="nav-item dropdown">
                                    <a class="nav-link" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-bell-fill text-white fs-4 m-2"></i>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li class="p-2">Bienvenido a nuestra tienda!</li>
                                    </ul>
                                </li>
                            </ul>

                        }

                        @* Carrito *@
                        <ul class="navbar-nav d-flex" onclick="window.location.href='/checkout'">
                            <li class="nav-item dropdown">
                                <a class="nav-link " role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-cart-fill text-white fs-4 m-2" style="color:white;"></i>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>Producto 1 - $234</li>
                                    <li>Producto 2 - $574</li>
                                    <li>Producto 3 - $84</li>
                                </ul>
                            </li>
                        </ul>
                    </div>

                </div>

                <div class="d-flex mx-auto">

                    <ul class="list-unstyled navbar-nav">
                            @await Component.InvokeAsync("Menu")
                        <li class="me-4">
                            <a class="text-light text-decoration-none" href="#">Contacto</a>
                        </li>
                        <li class="me-4">
                            <a class="text-light text-decoration-none" href="#">Nosotros</a>
                        </li>
                        <li class="me-4">
                            <a class="text-light text-decoration-none" href="#">FAQ</a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>

    </header>

    <div class="">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer id="footer" class="pt-5 border-top bg-white pb-0">
        <div class="container">
            <div class="row">
                <div class="col-6 col-md-2 mb-3">
                    <h5>Acerca de</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body-secondary">Lugares</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body-secondary">Contacto</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body-secondary">Quienes somos</a></li>
                    </ul>
                </div>

                <div class="col-6 col-md-2 mb-3">
                    <h5>Ayuda</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body-secondary">Como comprar</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body-secondary">Preguntas frecuentes</a></li>
                    </ul>
                </div>

                <div class="col-6 col-md-2 mb-3">
                    <h5>Mi Cuenta</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body-secondary">Compras</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body-secondary">Favoritos</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body-secondary">Carrito</a></li>
                    </ul>
                </div>

                <div class="col-md-5 offset-md-1 mb-3">
                    <form>
                        <h5>Recibí las ultimas noticias del sitio!</h5>
                        <p>Registrate y recibí las ultimas promociones en el sitio</p>
                        <div class="d-flex flex-column flex-sm-row w-100 gap-2">
                            <label for="newsletter1" class="visually-hidden">Email address</label>
                            <input id="newsletter1" type="text" class="form-control" placeholder="Correo electronico">
                            <button class="btn btn-primary" type="button">Registrate</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="d-flex flex-column flex-sm-row justify-content-between pt-4 mt-4 border-top">
                <p>© 2023 UYCommerce, Inc. Derechos de Autores reservados.</p>
                <ul class="list-unstyled d-flex">
                    <li class="ms-3"><a class="link-body-emphasis" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#twitter"></use></svg></a></li>
                    <li class="ms-3"><a class="link-body-emphasis" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#instagram"></use></svg></a></li>
                    <li class="ms-3"><a class="link-body-emphasis" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#facebook"></use></svg></a></li>
                </ul>
            </div>
        </div>
    </footer>




    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script type="text/javascript">$(document).ready(function () {
            $("#search").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: "/Producto/Autocomplete",
                        type: "POST",
                        dataType: "json",
                        data: { query: request.term },
                        success: function (data) {

                            response($.map(data, function (item) {
                                return {
                                    label: item.nombre,
                                    value: item.nombre,
                                    link: item.nombreclave,
                                    img: "/Imagenes/Productos/" + item.img
                                };
                            }))
                        }
                    })
                },
                select: function (event, ui) {

                    console.log(ui.item.img)
                    location.href = "/" + ui.item.link
                }
            }).autocomplete("instance")._renderItem = function (ul, item) {
                return $("<li><div><img src='" + item.img + "'><span>" + item.value + "</span></div></li>").appendTo(ul);
            };


        })</script>




    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

