<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UYCommerce</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UYCommerce.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>

</head>

<body>
    <div class="d-flex container-fluid">


        <div class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="width: 280px;border-right:solid 1px lightgrey">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
                <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
                <span class="fs-4">Menu</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                
                <li class="">
                    <a href="#" class="nav-link active">
                        <i class="bi bi-speedometer2 me-2" width="16" height="16"></i>
                        Dashboard
                    </a>
                </li>
                <li>
                    <a href="#" class="nav-link link-dark">
                        <i class="bi bi-table me-2" width="16" height="16"></i>
                        Ordenes
                    </a>
                </li>
                <li>
                    <a href="/productos" class="nav-link link-dark">
                        <i class="bi bi-grid me-2" width="16" height="16"></i>
                        Productos
                    </a>
                </li>
                <li>
                    <a href="#" class="nav-link link-dark">
                        <i class="bi bi-person-circle me-2" width="16" height="16"></i>
                        Clientes
                    </a>
                </li>
            </ul>
            <hr>
            <div class="">
                <ul class="list-unstyled text-small" aria-labelledby="dropdownUser2">
                    <li><a class="" href="#">Sign out</a></li>
                </ul>
            </div>
        </div>

        <div class="w-100">
        @RenderBody()
        </div>
    </div>

</body>
</html>