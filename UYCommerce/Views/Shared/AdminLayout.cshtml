<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UYCommerce</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UYCommerce.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    @*<script src="//code.jquery.com/jquery-1.10.2.js"></script>*@
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


</head>

<body class="bg-light">
    <div class="container-fluid">

        <div class="d-flex flex-column flex-shrink-0 p-3 bg-white fixed-top" style="width:15%;border-right:solid 1px lightgrey;height:100vh;">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none mx-auto">
                <span class="fs-4 fw-bold">UyCommerce</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">

                <li class="">
                    <active url="/admin/dashboard" action="Dashboard" classes="nav-link text-dark">
                        <i class="bi bi-speedometer2 me-2" width="16" height="16"></i>@Localizer["Dashboard"]
                    </active>
                </li>
                <li>
                    <active url="/admin/ordenes" action="GetOrdenes" classes="nav-link text-dark">
                        <i class="bi bi-table me-2" width="16" height="16"></i>@Localizer["Orders"]
                    </active>
                </li>
                <li>
                    <active url="/admin/productos" action="GetProductos" classes="nav-link text-dark">
                        <i class="bi bi-grid me-2" width="16" height="16"></i>@Localizer["Products"]
                    </active>
                </li>
                <li>
                    <active url="/admin/clientes" action="GetClientes" classes="nav-link text-dark">
                        <i class="bi bi-person me-2" width="16" height="16"></i>@Localizer["Clients"]
                    </active>
                </li>
                <li>
                    <active url="/admin/preguntas" action="GetPreguntas" classes="nav-link text-dark">
                        <i class="bi bi-question-lg me-2" width="16" height="16"></i>@Localizer["Questions"]
                    </active>
                </li>
                <li>
                    <active url="/admin/categorias" action="GetCategorias" classes="nav-link text-dark">
                        <i class="bi bi-tag me-2" width="16" height="16"></i>@Localizer["Categories"]
                    </active>
                </li>
                <li>
                    <active url="/admin/marcas" action="GetMarcas" classes="nav-link text-dark">
                        <i class="bi bi-patch-check-fill me-2" width="16" height="16"></i>@Localizer["Brands"]
                    </active>
                </li>
                <li>
                    <active url="/admin/atributos" action="GetAtributos" classes="nav-link text-dark">
                        <i class="bi bi-ui-checks me-2" width="16" height="16"></i>@Localizer["Attributes"]
                    </active>
                </li>
                <li>
                    <active url="/admin/reviews" action="GetReviews" classes="nav-link text-dark">
                        <i class="bi bi-star me-2" width="16" height="16"></i>@Localizer["Reviews"]
                    </active>
                </li>
                <li>
                    <active url="/admin/carousel" action="Carousel" classes="nav-link text-dark">
                        <i class="bi bi-image me-2" width="16" height="16"></i>@Localizer["Carousel"]
                    </active>
                </li>
            </ul>
            <hr>
            <div class="">
                <ul class="list-unstyled text-small" aria-labelledby="dropdownUser2">
                    <li><a class="" href="#">@Localizer["Sign out"]</a></li>
                </ul>
            </div>
        </div>

        <div style="height:100%;width:85%;display:flex;float:right;">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

</body>
</html>