@model List<Orden>


<div class="container">

    <div class="" style="min-height:900px;">

        <div class="mt-5 mb-3 d-flex align-items-center">
            <h3 >Mis compras</h3>
            <a class="ms-auto link-primary" href="/reviews">Dejanos tu opinion sobre tus productos!</a>
        </div>


        @if (Model.Any())
        {
            <div class="table-responsive">

                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">#Orden</th>
                            <th scope="col">Fecha de compra</th>
                            <th scope="col">Fecha de entrega</th>
                            <th scope="col">Total</th>
                            <th scope="col">Estado</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var o in Model)
                        {
                            <tr>
                                <td>@o.Id</td>
                                <td>@o.FechaDeCompra</td>
                                <td>@o.FechaDeEntrega</td>
                                <td>$@o.Total</td>
                                <td>@o.Estado</td>
                                <th class="text-center"><a href="/Compras/@o.Id" class="btn btn-primary">Ver Orden</a></th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>

</div>

